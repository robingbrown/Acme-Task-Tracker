@model AcmeTask

<form asp-action="NewTask" method="post">
    <input type="hidden" asp-for="TaskID" />
    <input type="hidden" asp-for="DateandTime" />
    <input type="hidden" asp-for="Status" />
    <div class="card card-outline-primary m-1 p-1">
        <div class="bg-faded p-1">
            <h4>
                <input asp-for="Title" value="Create New Task" class="form-control" />
            </h4>
        </div>
        <span class="card-text p-1">
            <textarea asp-for="Content" class="form-control"></textarea>
            <button type="submit" class="btn btn-success btn-sm pull-right" style="float:right">
                Save
            </button>
        </span>
    </div>
</form>

